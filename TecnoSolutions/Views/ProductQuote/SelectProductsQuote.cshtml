@model List<TechnoSolutions.Dtos.ProductSelectionDto>

@using (Html.BeginForm("SelectProductsQuote", "ProductQuote", FormMethod.Post))
{
    @Html.Hidden("IdQuote", ViewBag.IdQuote)

    <table class="table table-hover">
        <thead class="table-dark">
            <tr>
                <th>Producto</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(m => Model[i].IdProduct)
                        @Html.HiddenFor(m => Model[i].NameProduct)
                        @Html.HiddenFor(m => Model[i].UnitPrice)
                        @Model[i].NameProduct
                    </td>
                    <td>@Model[i].UnitPrice.ToString("C")</td>
                    <td>
                        @Html.TextBoxFor(m => Model[i].Quantity, new { type = "number", min = "0", @class = "form-control" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Agregar a Cotización</button>
}
