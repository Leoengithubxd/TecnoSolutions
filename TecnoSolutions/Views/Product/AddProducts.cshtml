
@{
    ViewBag.Title = "AddProducts";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de Sesión</title>
    <!-- CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-12">
                <div class="card login-card">
                    <div class="row login-container">

                        <!-- Formulario de Registro -->
                        <div class="col-md-12 login-form">
                            <h2 class="text-center text-principal mb-4">Agregar Productos</h2>
                            <form @*action="@Url.Action("SignUp","User")" method="post"*@>
                 
                                    
                                        <div class="mb-6">

                                            <label for="nombre" class="form-label" style="color:#ffff">Nombre</label>
                                            <input type="text" name="FirstName" class="form-control input_user" value="" placeholder="Nombre">
                                        </div>
                                   
                                  
                                        <div class="mb-12">
                                            <label for="Stock" class="form-label" style="color:#ffff">Stock</label>
                                            <input type="text" name="Stock" class="form-control input_user" value="" placeholder="Cantidad de unidades">
                                        </div>
                                   
                                        <div class="mb-6">
                                            <label for="Precio" class="form-label" style="color:#ffff">Precio</label>
                                            <input type="text" name="Precio" class="form-control input_user" value="" placeholder="Valor por unidad">
                                        </div>
                                   
                                    
                      
                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                }

                                <button type="submit" name="button" class="btn btn-primary w-100">Guardar</button>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
