@{
    ViewBag.Title = "Confirmación de Compra";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

@model List<TechnoSolutions.Dtos.ProductSelectionDto>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Confirmación de Compra - TechnoSolutions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .table-primary {
            --bs-table-bg: #0d3039;
            --bs-table-color: whitesmoke;
        }

        .table-container {
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #091324;
        }

        .header-title {
            font-size: 28px;
            color: #0d6efd;
            text-align: center;
            margin-bottom: 20px;
            background-color: #0d3039;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #0d3039;
            color: whitesmoke;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .text-principal {
            color: whitesmoke;
        }

        .btn-success, .btn-danger {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-success:hover {
                background-color: #218838;
            }

            .btn-danger:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="mt-3 text-principal">Confirmación de Compra</h2>
        </div>

        <div class="table-container">
            @if (Model.Count > 0)
            {
                <table class="table table-hover">
                    <thead class="table-primary">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.NameProduct</td>
                                <td>@product.Quantity</td>
                                <td>@product.UnitPrice.ToString("C")</td>
                                <td>@product.TotalPriceProduct.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <h3 class="text-principal">Total a Pagar: @ViewBag.TotalGeneral.ToString("C")</h3>

                <form action="@Url.Action("ConfirmPurchase", "Product")" method="post">
                    <button type="submit" class="btn btn-success mt-3">Comprar</button>
                </form>

                <form method="post" action="@Url.Action("CancelPurchase", "Product")">
                    <button type="submit" class="btn btn-danger mt-2">Cancelar</button>
                </form>
            }
            else
            {
                <p class="text-principal">No hay productos seleccionados.</p>
            }
        </div>
    </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>
    