@{
    ViewBag.Title = "Product Request Report";
}
@model List<TecnoSolutions.Models.PRODUCT>

<h2>📝 Product Request Report</h2>

<form method="post" action="@Url.Action("SendEmail", "Analist")">
    <table border="1" cellpadding="8" cellspacing="0">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Requested Stock</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Name</td>
                    <td>
                        <input type="hidden" name="products[@i].IdProduct" value="@Model[i].IdProduct" />
                        <input type="hidden" name="products[@i].Name" value="@Model[i].Name" />
                        <input type="number" name="products[@i].RequestedStock" value="1" min="1" required />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <button type="submit">📧 Enviar Correo</button>
</form>

<script>
    function printInvoice() {
        window.print();
    }
</script>
