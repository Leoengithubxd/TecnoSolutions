@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

@model List<TechnoSolutions.Dtos.ProductSelectionDto>

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Seleccionar Productos - TechnoSolutions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f4f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .table-primary {
            --bs-table-bg: #0d3039;
            --bs-table-color: whitesmoke;
        }

        .table-container {
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #091324;
        }

        .header-title {
            font-size: 28px;
            color: #0d6efd;
            text-align: center;
            margin-bottom: 20px;
            background-color: #0d3039;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            background-color: #0d3039;
            color: whitesmoke;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .btn-primary:hover {
                background-color: #091021;
            }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        .text-principal {
            color: whitesmoke;
        }

        .alert-danger {
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="text-center mb-4">

            <h2 class=" mt-3 text-principal">Seleccionar Productos</h2>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["Message"]
            </div>}

    <div class="table-container">
        @using (Html.BeginForm("SelectProducts", "Product", FormMethod.Post))
        {
            <table class="table table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Producto</th>
                        <th>Precio Unitario</th>
                        <th>Cantidad (Metros o Unidades)</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(m => Model[i].IdProduct)
                                @Html.HiddenFor(m => Model[i].NameProduct)
                                @Html.HiddenFor(m => Model[i].UnitPrice)
                                @Model[i].NameProduct
                            </td>
                            <td>@Model[i].UnitPrice.ToString("C")</td>
                            <td>
                                @Html.TextBoxFor(m => Model[i].Quantity, new { type = "number", min = "0", @class = "form-control" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <h3>Información de Contacto</h3>
            <div class="form-group">
                <label for="address">Dirección:</label>
                <input type="text" name="address" id="address" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="department">Departamento:</label>
                <input type="text" name="department" id="department" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="city">Ciudad:</label>
                <input type="text" name="city" id="city" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Agregar Products</button>
        }   
    </div>
    </div>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
</body>
</html>
