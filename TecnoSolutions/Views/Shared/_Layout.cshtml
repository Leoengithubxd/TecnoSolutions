<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .container-fluid {
            min-height: 40vh;
            display: flex;
            flex-direction: column;
            background-color: #7c8f97;
        }

        .container {
            background-color: #7c8f97;
        }

        body {
            background-color: #7c8f97;
        }

        .nav-icon {
            font-size: clamp(1.5rem, 3vw, 3rem); /* Iconos adaptativos */
            color: #ffffff;
        }

        .icon-footer {
            font-size: 1rem;
            color: darkolivegreen;
        }

        .body-content {
            padding: 20px; /* En vez de position absolute */
            min-height: 50vh;
        }

        .logo-left {
            max-width: 150px;
        }

        .nav-tabs {
            display: flex;
            justify-content: center;
            gap: 15px;
        }

        .navbar-toggler {
            border: none;
            background-color: transparent;
        }

        .collapse {
            background-color: #0d3039;
        }

        .vertical-menu {
            display: flex;
            flex-direction: column;
        }

            .vertical-menu .nav-link {
                display: flex;
                align-items: center;
                padding: 10px;
                text-decoration: none;
                color: saddlebrown;
            }

                .vertical-menu .nav-link img {
                    margin-right: 10px;
                    width: 32px;
                    height: 32px;
                }
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #7c8f97;
        }

    </style>
</head>
<body>
    <div class="container-fluid">
        <!-- Logo y menú en la misma fila -->
        <div class="d-flex justify-content-between align-items-center py-3">
            <img src="~/Content/Image/logo.jpeg" class="logo-left" alt="Logo">

            <!-- Botón de menú responsive -->
            <button class="navbar-toggler d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#menuPrincipal">
                <span class="bi bi-list nav-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contacto", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("xdxd", "AnalistCrud", "Product", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>

        <!-- Menú -->
        <div class="collapse d-md-block" id="menuPrincipal">
            <ul class="nav nav-tabs justify-content-center">
                <li class="nav-item">
                    <a href="@Url.Action("AdminHome", "User")" class="nav-link">
                        <i class="bi bi-house-door-fill nav-icon"></i>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="@Url.Action("Login", "User")" class="nav-link">
                        <i class="bi bi-person-fill nav-icon"></i>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Contenido principal -->
        <div class="body-content">
            @RenderBody()
            <hr />

            <footer style="background-color: transparent; padding: 20px; text-align: left;">
                <p> <h5 style="color:whitesmoke">Contáctanos</h5>  </p>
                <i class="bi bi-telephone icon-footer"></i>
                310-558-20-32
                <p>
                <p>
                    <i class="bi bi-instagram icon-footer"></i>
                    DISTRIREDES
                </p>
                <p>&copy; @DateTime.Now.Year - DISTRIREDES Y COMUNICACIONES</p>


            </footer>
        </div>



    </div>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
