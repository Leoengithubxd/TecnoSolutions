@{
    ViewBag.Title = "ApproveQuote";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cotizaciones</h2>

<table class="table table-striped">
    <thead class="table-primary">
        <tr >
            <th>ID Cotización</th>
            <th>Estado</th>
            <th>Precio</th>
            <th>Acción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model)
        {
            <tr>
                <td>@quote.IdQuote</td>
                <td>@quote.IdState</td>
                <td>@quote.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("QuoteDetailsA", "Quote", new { id = quote.IdQuote })" class="btn btn-primary">
                        Ver Detalles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AdminHome", "User")" class="btn btn-secondary">Volver</a>


