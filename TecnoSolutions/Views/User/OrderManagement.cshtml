
@{
    ViewBag.Title = "OrderManagement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <div class="container">
        <h1 class="text-principal">Gestion de pedidos</h1>

        <div class="container text-start">
            <div class="row justify-content-start">
                <div class="col-auto">
                    <div class="row ">
                        <div class="col-auto">

                            <select id="filterRoleState" class="form-select" onchange="filterTable()">
                                <option value="">Filtrar por estado </option>
                                <option value="pendiente">Pendiente</option>
                                <option value="entregado">Entregado</option>
                                <option value="cancelado">Cancelado</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group mb-3">
                        <span class="input-group-text " id="basic-addon1">
                            <i class=" bi bi-search-heart-fill nav-icon " style="font-size: 30px; color: #0d3039"></i>
                        </span>
                        <input type="text" id="searchInput" class="form-control " placeholder="Buscar en la tabla..." onkeyup="filterTable()" aria-describedby="basic-addon1">

                    </div>
                </div>

            </div>
        </div>
        <div class="col">
            <div id="noResultsMessage" class="alert alert-warning" style="display: none;">
                No se encontraron resultados para los filtros aplicados. Intente modificar los criterios de búsqueda.
            </div>

        </div>
        <div class="table-container">
            <table class="table table-custom">
                <thead class="table-primary">
                    <tr>
                        <th>Pedido</th>
                        <th>Cliente</th>
                        <th>Fecha Entrega</th>
                        <th>Estado</th>
