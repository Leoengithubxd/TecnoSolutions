@{ Layout = null; }

@{
    ViewBag.Title = "SignUp";
}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de Sesión</title>
    <!-- CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-12">
                <div class="card login-card">
                    <div class="row login-container">

                        <!-- Formulario de Registro -->
                        <div class="col-md-12 login-form">
                            <h2 class="text-center text-principal mb-4">Registro de Usuario</h2>
                            <form action="@Url.Action("SignUp","User")" method="post">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="mb-3">

                                            <label for="nombre" class="form-label" style="color:#ffff">Nombre</label>
                                            <input type="text" name="FirstName" class="form-control input_user" value="" placeholder="Nombre">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="apellido" class="form-label" style="color:#ffff">Apellido</label>
                                            <input type="text" name="LastName" class="form-control input_user" value="" placeholder="Apellido">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="documento" class="form-label" style="color:#ffff">Documento</label>
                                            <input type="text" name="Document" class="form-control input_user" value="" placeholder="Documento">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="telefono" class="form-label" style="color:#ffff">Teléfono</label>
                                            <input type="text" name="Phone" class="form-control input_user" value="" placeholder="Telefono">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="direccion" class="form-label" style="color:#ffff">Dirección</label>
                                            <input type="text" name="Address" class="form-control input_user" value="" placeholder="Dirección">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="departamento" class="form-label" style="color:#ffff">Departamento</label>
                                            <input type="text" name="Department" class="form-control input_user" value="" placeholder="Departamento">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="ciudad" class="form-label" style="color:#ffff">Ciudad</label>
                                            <input type="text" name="City" class="form-control input_user" value="" placeholder="Ciudad">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="correo" class="form-label" style="color:#ffff">Correo</label>
                                            <input type="text" name="Email" class="form-control input_user" value="" placeholder="Correo">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="password" class="form-label" style="color:#ffff">Contraseña</label>
                                            <input type="password" name="Password" class="form-control input_user" value="" placeholder="Contraseña">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="mb-3">
                                            <label for="confirmarPassword" class="form-label" style="color:#ffff">Confirmar Contraseña</label>
                                            <input type="password" name="VerifyPassword" class="form-control input_pass" value="" placeholder="Confirmar Contraseña">
                                        </div>
                                    </div>
                                </div>
                                @if (ViewData["Mensaje"] != null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Mensaje"]
                                    </div>
                                }

                                <button type="submit" name="button" class="btn btn-primary w-100">Registrar</button>

                                <p class="text-center mt-3" style="color:#ffff">
                                    ¿Ya tienes una cuenta? <a href="/User/Login" class="text-decoration-none" style="color: #b8e5eb;"><u>Iniciar sesión</u></a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>


</html>
