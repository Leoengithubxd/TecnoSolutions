@{ Layout = null; }
@{
    ViewBag.Title = "Login";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio de Sesión</title>
    <!-- CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/Style/Login.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center justify-content-center vh-100">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <div class="card login-card">
                    <div class="row login-container">
                        <!-- Formulario de Login -->
                        <div class="col-md-6 login-form">
                            <h2 class="text-center text-principal mb-4">Iniciar Sesión</h2>
                            <form action="@Url.Action("Login","User")" method="post">
                                <div class="mb-3">
                                    <label for="Email" class="form-label " style="color:#ffff">Usuario</label>
                                    <input type="text" name="Email" class="form-control input_user" value="" placeholder="Email">
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label" style="color:#ffff">Contraseña</label>
                                    <input type="password" name="Password" class="form-control input_user" value="" placeholder="Password">
                                </div>
                                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
                                <p class="text-center mt-3" style="color:#ffff">
                                    ¿No tienes una cuenta? <a href="/User/SignUp" class="text-decoration-none" style="color: #b8e5eb;"><u>Regístrate aquí</u></a>
                                </p>
                            </form>
                        </div>

                        <!-- Logo -->
                        <div class="col-md-6 logo-container">
                            <img src="~/Content/Image/logo.jpeg" alt="Logo" class="img-fluid">
                       
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
